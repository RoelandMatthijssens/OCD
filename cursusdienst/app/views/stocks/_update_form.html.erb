<%= form_for(@stock_item) do |s| %>

  <%= render 'shared/error_messages', :object => s.object %>

  <div class='field'>
    <%= s.label :amount %> <br>
    <%= s.text_field :amount %> <br>

    <%= label_tag 'change' %> <br>
    <%= text_field_tag 'change' %> <br>

    <%= s.label :floating %> <br>
    <%= s.text_field :floating %> <br>
  </div>
  <div class='field'>
    <%= s.submit @submit %>
  </div>
<% end %>
