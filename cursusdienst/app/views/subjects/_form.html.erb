<%= form_for(@subject) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <script type="text/javascript">
    tag = 1;
  </script>
  <div class='field'>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>
  <div class='field'>
    <%= f.label :disciplines %> <br>
    <%= hidden_field_tag "disciplines_counter", 1 %>
    <div class='fields'>
      <%= f.fields_for :disciplines do |builder| %>
        <%=  render 'discipline_fields' , :f => builder %>
      <% end %>
      <%= link_to_perform_javascript "add one", [],[], [add_fields(f, :disciplines)] %>
    </div>

  </div>
  <div class="actions">
    <%= f.submit @submit %>
  </div>
<% end %>
