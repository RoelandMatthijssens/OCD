<%= form_for(@material) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class='field'>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>
  <div class='field' >
    <div class="field" id="subject_field" style="display: none;">
      <%= f.label :subject %> <br>
      <%= f.collection_select(:subject_id,
        Subject.all,
        :id,
        :name,
        { :prompt => "Select if applicable"})%>
    </div>
    <%= link_to_show_item "add to subject", "subject_field" %>
  </div>


  <div class="actions">
    <%= f.submit @submit %>
  </div>
<% end %>