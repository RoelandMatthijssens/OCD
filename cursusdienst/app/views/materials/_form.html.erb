<%= form_for(@material) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class='field'>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>
  <div class='field' >
    <div class="field" id="subject_field" <%= "style='display: none;'" unless @material.subject  %> >
      <%= f.label :subject %> <br>
      <%= f.collection_select(:subject_id,
        Subject.all,
        :id,
        :name,
        { :prompt => "Select if applicable"})%>
      <%= link_to_remove_fields "remove", f %>
    </div>
    <div class="field" id="add_subject_link" <%= "style='display: none;'" if @material.subject  %> >
      <%= link_to_show_hide_items "add to subject", ["subject_field"], ["add_subject_link"] %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit @submit %>
  </div>
<% end %>