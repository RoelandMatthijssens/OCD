<fieldset>
  <legend>Info</legend>
  <strong><%= t(:initials) %>:</strong> <%= institute.initials %> <br/>
  <strong><%= t(:location) %>:</strong> <%= institute.location %> <br/>
  <%= link_to "Edit this institute(symbol)", edit_institute_path(institute) %>
</fieldset>

<fieldset>
  <legend><%= t(:faculties) %></legend>
  <div class="Faculties">

    <%= link_to "add new", new_faculty_path %>
    <ul class="faculties">
      <% institute.faculties.each do |faculty| %>
        <li><%= faculty.name %></li>
      <% end %>
    </ul>
  </div>
</fieldset>
