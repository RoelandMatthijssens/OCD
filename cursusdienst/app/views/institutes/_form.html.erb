<%= form_for(@institute) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class='field'>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>
  <div class='field'>
    <%= f.label :initials %> <br>
    <%= f.text_field :initials %> <br>
  </div>
  <div class='field'>
    <%= f.label :location %> <br>
    <%= f.text_field :location %> <br>
  </div>
  <div class="actions">
    <%= f.submit @submit %>
  </div>
<% end %>