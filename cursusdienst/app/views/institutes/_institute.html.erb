<div class="institute">
  <h1><%= link_to institute.name, institute %></h1>
  <strong>Initials:</strong> <%= institute.initials %> <br/>
  <strong>Location:</strong> <%= institute.location %> <br/>
	<%= link_to "Edit this institute", edit_institute_path(institute) %><br/><br/> <!--	#TODO: in css -->
	<h2>Faculties</h2>
	<ul class="faculties">
		<% institute.faculties.each do |faculty| %>
			<li><%= faculty.name %></li>
		<% end %>
	</ul>
</div>
