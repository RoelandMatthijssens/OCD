<tr>
  <% unless params[:action] == "my_orders" || params[:action] == "process_orders" %>
    <td><%= order.user.name %> <%= order.user.last_name %> (<%= order.user.user_name %>)</td>
  <% end %>
  <% unless params[:action] == "process_orders" %>
    <td><%= order.order_key %></td>
  <% end %>
  <% unless params[:action] == "my_orders" %>
    <td><%= t(order.status, :scope => "order.status" ) %></td>
  <% end %>
  <td><%= render :partial => 'orders_materials', :locals => { :items => order.material_orders } %></td>
  <% unless params[:action] == 'my_orders' %>
    <td>
      <% case order.status %>
        <% when "Posted"%>
         <%= 'MAKE DROPDOWN mark as payed' %><br/>
         <%= 'cancel' %>
        <% when "Payed" %>
          <%= 'mark as ordered' %>
          <%= 'cancel' %>
        <% when "Ordered" %>
          <%=  'mark as delivered' %>
        <% when "Delivered" %>
          <%=  link_to t(:mark_as_ready, :scope => "globals" ), :controller=>'orders', :action=>'mark_as', :id=>order.id, :status_to=>"Ready", :method => :put %>
        <% when "Ready" %>
          <%=  'mark as done' %>
        <% when "Done" %>
          <%=  'nothing' %>
        <% when "Canceled" %>
          <%=  'nothing' %>
        <% else %>
          <%= "nothing" %>
      <% end %>
    </td>
  <% else %>
    <td>
      <% case order.status %>
        <% when "Posted"%>
         <%= 'cancel' %>
        <% when "Payed" %>
          <%= 'cancel' %>
        <% else %>
          <%= "nothing" %>
      <% end %>
    </td>
  <% end %>
</tr>
