<h3>Active Orders</h3>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Order key</th>
      <th>Status</th>
      <th>materials</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.name %></td>
        <td><%= order.order_key %></td>
        <td><%= order.status %></td>
        <td><table>
            <thead>
              <tr>
                <th>item name</th>
                <th>bought at</th>
                <th>amount</th>
              </tr>
            </thead>
            <tbody>
              <% order.material_orders.each do |item| %>
                <tr>
                  <td><%= item.material.name %></td>
                  <td><%= item.guild.name %></td>
                  <td><%= item.amount %></td>
                </tr>
              <% end %>
            </tbody>
          </table></td>
        <td><%= link_to 'mark as payed', mark_as_payed_order_path(order), :method => :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>
