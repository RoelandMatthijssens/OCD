<%= form_for(@info_string) do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

  <% if @key %>
  <div class='field'>
    <%= f.hidden_field :guild_id, :value => @guild %> <br>
  </div>
  <div class='field'>
    <%= f.hidden_field :key, :value => @key %> <br>
  </div>
  <% else %>
    <div class='field'>
      <%= label_tag t(:key, :scope => 'globals') %> <br>
      <%= f.text_field :key %> <br>
    </div>
  <% end %>
  <div class='field'>
    <%= label_tag t(:content, :scope => 'globals') %> <br>
    <%= f.text_area :content %> <br>
      <%= render :partial=>'shared/wysiwyg', :locals=>{:id=>'info_string_content'}%>
  </div>

  <div class='field'>
    <%= f.submit @submit %>
  </div>
  <% end %>
