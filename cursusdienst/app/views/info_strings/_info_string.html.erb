<% if guild.info info_name %>
    <fieldset class="simplefieldset2">
      <legend><%= t(info_name.to_sym, :scope => "info" ) %></legend>
      <% info = guild.info(info_name) %>
      <%= raw info.content %><br/>
      <%= link_to t(:edit, :scope => "links" ), edit_info_string_path(info) %>
    </fieldset>
  <% else %>
    <%= link_to t("set_#{info_name}_info".to_sym, :scope => "links" ), :controller => "info_strings", :action => 'new', :key => info_name, :guild_id => guild.id %>
  <% end %><br/>
