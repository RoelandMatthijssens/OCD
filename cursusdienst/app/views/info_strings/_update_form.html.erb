<%= form_for(@info_string) do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

	<div class='field'>
    <%= label_tag t(:key, :scope => 'globals') %> <br>
		<%= f.text_field :key %> <br>
  </div>
  <div class='field'>
    <%= label_tag t(:content, :scope => 'globals') %> <br>
    <%= f.text_area :content %> <br>
    
    <%= render :partial=>'shared/wysiwyg', :locals=>{:id=>'info_string_content'}%>
  </div>
	<div class='field'>
		<%= f.submit @submit %>
	</div>
  <% end %>
