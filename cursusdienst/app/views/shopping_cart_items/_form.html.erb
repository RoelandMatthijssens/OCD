<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

  <div class='field'>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>
  <div class='field'>
    <%= f.label :last_name %> <br>
    <%= f.text_field :last_name %> <br>
  </div>
  <div class='field'>
    <%= f.label :user_name %> <br>
    <%= f.text_field :user_name %> <br>
  </div>
  <div class='field'>
    <%= f.label :email %> <br>
    <%= f.text_field :email %> <br>
  </div>
  <div class='field'>
    <%= f.label :password %> <br>
    <%= f.password_field :password %> <br>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation, "Confirmation" %> <br>
    <%= f.password_field :password_confirmation %> <br>
  </div>
	<div class="field">
		<%= f.collection_select :id, Guild.find(:all), :id, :name, { :prompt => t(:select_your_guild, :scope => "message" ) } %>
	</div>
  <div class='field'>
    <%= f.submit @submit %>
  </div>
<% end %>
