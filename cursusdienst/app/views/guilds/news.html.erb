<h1><%= t(:news, :scope => "side_menu") %>
  <div class="to_right">
    <span class="comment_text">
      <%= link_to t(:new_message, :scope => "links" ), new_message_path(:guild_id => @guild.id) %>
    </span>
    <%= link_to image_tag("icons/twotone/" + icon_color + "/plus.gif", :alt=>t("new_message", :scope => 'links')), new_message_path(:guild_id => @guild.id) %>
  </div>
</h1>
<div class="messages", id="messages">
     <% @guild.messages.each do |message| %>
       <%= render message %>
     <% end %>
</div>

 <%= render :partial => 'sidemenu', :locals => {:guild => @guild}  %>
