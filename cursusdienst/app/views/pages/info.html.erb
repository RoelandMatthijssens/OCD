<h1><%= @title %></h1>
<% if current_user %>
  <%= current_user.guilds.first && current_user.guilds.first.name %>
<% end %>
<div class="content">
  <h2><%= t(:welcome_message_about_platform_title, :scope => 'page.home') %></h2>
  <p class="indentbody"><%= t(:welcome_message_about_platform_html, :scope => 'page.home') %></p>
  <h2><%= t(:welcome_message_about_us_title, :scope => 'page.home') %></h2>
  <p class="indentbody"><%= t(:welcome_message_about_us, :scope => 'page.home') %></p>
  <h2><%= t(:welcome_message_join_us_title, :scope => 'page.home') %></h2>
  <p class="indentbody"><%= t(:welcome_message_join_us, :scope => 'page.home') %></p>
</div>
<br/>
<div class="sponsors">
  <fieldset>
    <legend class="cmxform"><%= t(:thanks, :scope => 'sponsor') %></legend>
    <table>
      <tbody>
        <tr>
          <td><a href="http://www.ubuntu.com/" ><%= image_tag("partners/tux2.png", :size => "80x80" ) %></td>
          <td><a href="http://www.ubuntu.com/" ><%= image_tag("partners/vub.jpg", :size => "300x69" ) %></td>
          <td><a href="http://www.ubuntu.com/" ><%= image_tag("partners/chrome-fox.png", :size => "80x80" ) %></td>
        </tr>
      </tbody>
    </table>
  </fieldset>
</div>

<%= render :partial => "home_side_menu" %>

<% if !current_user %>
  <% content_for :sideshop do  %>
    <div class="topline"></div>
    <div id="sidelogin">
      <%= form_for(:session, :url => sessions_path) do |f| %><br/>
        <div class='field'>
          <%= f.label :user_name %> <br>
          <%= f.text_field :user_name %> <br>
        </div>
        <div class='field'>
          <%= f.label :password %> <br>
          <%= f.password_field :password %> <br>
        </div>
        <div class="actions">
          <%= f.submit 'Sign in' %>
        </div>
      <% end %>
    </div>
    <div class="topline"></div>
  <% end %>
<% end %>
